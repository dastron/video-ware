{
  "name": "@project/shared",
  "version": "0.0.0",
  "description": "Shared zod schemas for the project",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "import": "./dist/schema.js",
      "types": "./dist/schema.d.ts"
    },
    "./enums": {
      "import": "./dist/enums.js",
      "types": "./dist/enums.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    },
    "./mutator": {
      "import": "./dist/mutator.js",
      "types": "./dist/mutator.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "nodemon",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .prettierignore",
    "migrate:generate": "npx pocketbase-migrate generate",
    "migrate:status": "npx pocketbase-migrate status",
    "test": "echo 'shared workspace - no tests needed'",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typegen": "pocketbase-typegen --url http://localhost:8090 --out src/types/pocketbase.ts"
  },
  "dependencies": {
    "pocketbase": "^0.26.5",
    "pocketbase-zod-schema": "^0.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "fast-check": "^4.5.3",
    "nodemon": "^3.1.11",
    "pocketbase-typegen": "^1.3.2",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  },
  "packageManager": "yarn@4.12.0"
}
