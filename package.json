{
  "name": "next-pb",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "worker",
    "webapp",
    "shared",
    "pb"
  ],
  "scripts": {
    "setup": "node scripts/setup-pocketbase.js",
    "dev": "concurrently \"yarn workspace @project/webapp dev\" \"yarn workspace @project/pb dev\" \"yarn workspace @project/worker dev\" \"yarn workspace @project/shared dev\"",
    "build": "yarn workspaces foreach -A run build",
    "test": "yarn workspace @project/shared test && yarn workspace @project/webapp test",
    "test:watch": "concurrently \"yarn workspace @project/shared test:watch\" \"yarn workspace @project/webapp test:watch\"",
    "lint:check": "yarn workspaces foreach -A run lint",
    "lint": "yarn workspaces foreach -A run lint:fix",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "format": "yarn workspaces foreach -A run format",
    "format:check": "yarn workspaces foreach -A run format:check",
    "clean": "yarn workspaces foreach -R run clean && rm -rf pb/pocketbase",
    "typegen": "yarn workspace @project/shared typegen",
    "db:start": "yarn workspace @project/pb dev:debug",
    "db:migrate": "yarn workspace @project/shared migrate:generate",
    "db:status": "yarn workspace @project/shared migrate:status"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
